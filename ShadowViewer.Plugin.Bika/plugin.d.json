{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "PluginMetaData",
  "type": "object",
  "description": "插件元数据",
  "additionalProperties": false,
  "required": [
    "Id",
    "Name",
    "Version"
  ],
  "properties": {
    "Id": {
      "type": "string"
    },
    "Name": {
      "type": "string"
    },
    "Version": {
      "type": "string"
    },
    "SdkVersion": {
      "type": "string",
      "default": "[3.1, 3.2)"
    },
    "Priority": {
      "type": "integer",
      "format": "int32"
    },
    "Description": {
      "type": "string",
      "description": "介绍"
    },
    "Authors": {
      "type": "string",
      "description": "作者"
    },
    "WebUri": {
      "type": "string",
      "description": "项目地址"
    },
    "Logo": {
      "type": "string",
      "description": "图标\n1.本地文件,以ms-appx://开头\n2.FontIcon,以font://开头\n3.FluentRegularIcon,以fluent://regular开头\n4.FluentFilledIcon,以fluent://filled\n1.ms-appx:///Assets/Icons/Logo.png\n2.font://\\uE714\n3.fluent://regular/Apps\n4.fluent://filled/Apps"
    }
  }
}